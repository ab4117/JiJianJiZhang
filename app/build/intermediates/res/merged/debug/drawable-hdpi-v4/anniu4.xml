<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android='http://schemas.android.com/apk/res/android'>
	<item android:state_pressed='true'>
		<shape>
			<gradient android:startColor='#FFFF00' android:endColor='#B39D15'
				android:angle='0'/>
			<stroke android:width='1dip' android:color='#DBDFE2'/>
			<corners android:radius='8dp'/>
			<padding android:left='10dp' android:top='10dp' android:right='10dp'
				android:bottom='10dp'/>
		</shape>
	</item>
	<item android:state_focused='true'>
		<shape>
			<gradient android:startColor='#45E24E' android:endColor='#16940C'
				android:angle='270'/>
			<stroke android:width='1dip' android:color='#D6CDCB'/>
			<corners android:radius='15dp'/>
			<padding android:left='10dp' android:top='10dp' android:right='10dp'
				android:bottom='10dp'/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:startColor='#7CE059' android:endColor='#2C9B0A'
				android:angle='90'/>
			<stroke android:width='1dip' android:color='#CFCECD'/>
			<corners android:radius='8dp'/>
			<padding android:left='10dp' android:top='10dp' android:right='10dp'
				android:bottom='10dp'/>
		</shape>
	</item>
</selector>
