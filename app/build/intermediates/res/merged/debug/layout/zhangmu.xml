<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/blue_bg"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<LinearLayout
		android:background="#19DF74"
		android:layout_height="45dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<ImageButton
			android:layout_height="match_parent"
			android:layout_width="50dp"
			android:id="@+id/ImageButton1"
			android:src="@drawable/abc"
			android:background="@drawable/but_fanhui"
			android:layout_margin="3dp"/>

		<TextView
			android:layout_height="match_parent"
			android:text="项目"
			android:layout_width="match_parent"
			android:gravity="left|center"
			android:textColor="#806F7D"
			android:textSize="19sp"/>

	</LinearLayout>

	<FrameLayout
		android:id="@+id/LinearLayout02"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="10dp"
		android:background="@drawable/anniu6">

		<TextView
			android:id="@+id/TextView01"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="项目:"
			android:minWidth="90dip"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#5B5909"
			android:gravity="left|center"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:textCursorDrawable="@null"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="请输入项目名称"
			android:gravity="center"
			android:background="@drawable/anniu5"
			android:id="@+id/zhangmuEditText1"
			android:textColor="#211E1E"/>

	</FrameLayout>

	<FrameLayout
		android:id="@+id/LinearLayout03"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:background="@drawable/anniu6">

		<TextView
			android:id="@+id/TextView03"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="单价:"
			android:minWidth="90dip"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#655508"
			android:gravity="left|center"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:textCursorDrawable="@null"
			android:inputType="numberDecimal"
			android:maxLength="8"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="0.00元"
			android:gravity="center"
			android:background="@drawable/anniu5"
			android:id="@+id/zhangmuEditText2"
			android:textColor="#262323"/>

	</FrameLayout>

	<LinearLayout
		android:id="@+id/LinearLayout08"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">

		<Button
			android:text="保存"
			android:textStyle="bold"
			android:textSize="20dip"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:background="@drawable/anniu2"
			android:id="@+id/zhangmuButton1"
			android:textColor="#2D2BB3"/>

	</LinearLayout>

</LinearLayout>

