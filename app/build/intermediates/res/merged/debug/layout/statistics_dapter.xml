<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="35dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:background="@drawable/c2">

		<TextView
			android:text="收入"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:gravity="center"
			android:layout_weight="1.0"
			android:textStyle="bold|italic|normal"/>

		<TextView
			android:text="出勤"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"/>

		<TextView
			android:text="平均"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="40dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:background="@drawable/c2">

		<TextView
			android:text="1"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="17sp"
			android:gravity="center"
			android:layout_weight="1.0"
			android:textStyle="bold|italic|normal"
			android:id="@+id/statisticsdapterTextView1"/>

		<TextView
			android:text="2"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="17sp"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"
			android:id="@+id/statisticsdapterTextView2"/>

		<TextView
			android:text="3"
			android:textColor="#221191"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:textSize="17sp"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"
			android:id="@+id/statisticsdapterTextView3"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#30AA10">

		<TextView
			android:text="项目"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:textSize="15dip"
			android:textColor="#000000"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"/>

		<TextView
			android:text="数量"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:textSize="15dip"
			android:textColor="#000000"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"/>

		<TextView
			android:text="金额"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:textSize="15dip"
			android:textColor="#000000"
			android:layout_weight="1"
			android:gravity="center"
			android:textStyle="bold|italic|normal"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1.0">

		<ListView
			android:fadingEdge="vertical"
			android:fadingEdgeLength="2px"
			android:id="@+id/list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:scrollingCache="false"
			android:background="#F2B97E"
			android:divider="#7D7D7D"
			android:dividerHeight="1px">

		</ListView>

	</LinearLayout>

</LinearLayout>

