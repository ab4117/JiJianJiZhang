<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg">

	<LinearLayout
		android:layout_height="45dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:background="#A8BC1E">

		<ImageButton
			android:layout_height="45dp"
			android:layout_width="50dp"
			android:id="@+id/ImageButton1"
			android:src="@drawable/abc"
			android:background="@drawable/but_fanhui"/>

		<TextView
			android:layout_height="match_parent"
			android:text="用户设置"
			android:layout_width="match_parent"
			android:gravity="left|center"
			android:textColor="#49168B"
			android:textSize="19sp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="1dp"
		android:background="#1AB41A">

		<TextView
			android:text="员工名称"
			android:layout_width="fill_parent"
			android:layout_height="30dip"
			android:textSize="15dip"
			android:textColor="#000000"
			android:layout_weight="1"
			android:gravity="center"/>

	</LinearLayout>

	<LinearLayout
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="match_parent">

		<ListView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollingCache="false"
			android:divider="#A0A0A0"
			android:dividerHeight="1px"
			android:layout_margin="1dip"
			android:background="#CCCCCC"
			android:id="@+id/userlistListView1">

		</ListView>

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<Button
			android:text="增加员工"
			android:layout_gravity="bottom"
			android:textSize="20dip"
			android:textColor="#2E28BD"
			android:background="@drawable/anniu2"
			android:layout_width="fill_parent"
			android:layout_height="50dip"
			android:id="@+id/userlistButton1"/>

	</LinearLayout>

</LinearLayout>

